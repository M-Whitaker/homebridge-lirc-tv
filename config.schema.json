          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "required": true
            },
            "id": {
              "title": "Unique ID",
              "type": "string",
              "required": true
            },
            "remote": {
              "title": "LIRC Remote Name",
              "type": "string",
              "required": true
            },
            "delay": {
              "title": "Delay between IR send",
              "type": "integer",
              "required": true
            },
            "host": {
              "title": "LIRC Hostname/IP",
              "type": "string",
              "required": true
            },
            "port": {
              "title": "LIRC Port",
              "type": "integer",
              "required": true
            },
            "power_on": {
              "title": "Power On Command(s)",
              "type": "array",
              "required": true,
              "items": {
                "title": "LIRC Remote Button/Command",
                "type": "string",
                "required": true
              }
            },
            "power_off": {
              "title": "Power Off Command(s)",
              "type": "array",
              "required": true,
              "items": {
                "title": "LIRC Remote Button/Command",
                "type": "string",
                "required": true
              }
            },
            "inputs": {
              "title": "Inputs",
              "type": "array",
              "required": true,
              "items": {
                "id": {
                  "title": "Unique ID",
                  "type": "string",
                  "required": true
                },
                "name": {
                  "title": "Name",
                  "type": "string",
                  "required": true
                },
                "type": {
                  "title": "Name",
                  "type": "integer",
                  "required": true,
                  "oneOf": [
                    { "title": "Other", "enum": [0] },
                    { "title": "Home Screen", "enum": [1] },
                    { "title": "Tuner", "enum": [2] },
                    { "title": "HDMI", "enum": [3] },
                    { "title": "Composite Video", "enum": [4] },
                    { "title": "S-Video", "enum": [5] },
                    { "title": "Component Video", "enum": [6] },
                    { "title": "DVI", "enum": [7] },
                    { "title": "Airplay", "enum": [8] },
                    { "title": "USB", "enum": [9] },
                    { "title": "Application", "enum": [10] }
                  ]
                },
                "command": {
                  "title": "Command(s)",
                  "type": "array",
                  "required": true,
                  "items": {
                    "title": "LIRC Remote Button/Command",
                    "type": "string",
                    "required": true
                  }
                }
              }
            }
          }
        }
      }
    }
  }
